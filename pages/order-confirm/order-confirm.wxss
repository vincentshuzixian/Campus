.page {
  min-height: 100vh;
  background: #f8f8f8;
  padding-bottom: 120rpx;
}

.section-title {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.restaurant-info {
  background: #fff;
  padding: 30rpx;
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.restaurant-logo {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.restaurant-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.restaurant-address {
  font-size: 24rpx;
  color: #999;
}

.order-items {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.item {
  margin-bottom: 20rpx;
}

.item-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.item-name {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.item-quantity {
  font-size: 26rpx;
  color: #666;
  margin: 0 20rpx;
}

.item-price {
  font-size: 28rpx;
  color: #ff4d4f;
  font-weight: bold;
}

.total {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 30rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #eee;
}

.total-price {
  font-size: 32rpx;
  color: #ff4d4f;
  font-weight: bold;
}

.pickup-time, .pickup-method, .payment-method, .remarks {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.picker {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
}

.arrow {
  width: 32rpx;
  height: 32rpx;
}

.method-options, .payment-options {
  display: flex;
  gap: 20rpx;
}

.method-item, .payment-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 30rpx;
  border: 2rpx solid #eee;
  border-radius: 8rpx;
  gap: 16rpx;
}

.method-item.active {
  border-color: #07c160;
  background: #f0fff4;
}

.method-item image, .payment-item image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.payment-item {
  width: 100%;
  display: flex;
  align-items: center;
  padding: 30rpx;
  border: 2rpx solid #eee;
  border-radius: 8rpx;
}

.payment-item.active {
  border-color: #07c160;
  background: #f0fff4;
}

.payment-item text {
  flex: 1;
  margin-left: 16rpx;
}

.payment-item .check {
  position: absolute;
  right: 20rpx;
  width: 32rpx;
  height: 32rpx;
}

textarea {
  width: 100%;
  height: 160rpx;
  padding: 20rpx;
  box-sizing: border-box;
  border: 2rpx solid #eee;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.word-count {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.price-info {
  font-size: 28rpx;
  color: #333;
}

.final-price {
  font-size: 36rpx;
  color: #ff4d4f;
  font-weight: bold;
}

.submit-btn {
  background: #07c160;
  color: #fff;
  font-size: 28rpx;
  padding: 0 60rpx;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 35rpx;
}

.icon-small {
  width: 32rpx;
  height: 32rpx;
}

.icon-medium {
  width: 48rpx;
  height: 48rpx;
}

.icon-check {
  width: 40rpx;
  height: 40rpx;
} 