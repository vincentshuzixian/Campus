.page {
  min-height: 100vh;
  background: #f8f8f8;
  padding-bottom: 120rpx;
}

.dish-images {
  width: 100%;
  height: 500rpx;
}

.dish-images image {
  width: 100%;
  height: 100%;
}

.dish-info {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.dish-header {
  margin-bottom: 30rpx;
}

.dish-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.dish-price {
  display: flex;
  align-items: baseline;
}

.price {
  font-size: 40rpx;
  font-weight: bold;
  color: #ff4d4f;
  margin-right: 20rpx;
}

.monthly-sales {
  font-size: 24rpx;
  color: #999;
}

.section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.dish-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.recommended-dishes {
  white-space: nowrap;
  margin: 0 -30rpx;
  padding: 0 30rpx;
}

.recommended-item {
  display: inline-block;
  width: 200rpx;
  margin-right: 20rpx;
}

.recommended-item image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  margin-bottom: 10rpx;
}

.recommended-name {
  font-size: 26rpx;
  color: #333;
  margin-bottom: 6rpx;
  white-space: normal;
}

.recommended-price {
  font-size: 26rpx;
  color: #ff4d4f;
  font-weight: bold;
}

.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.restaurant-info {
  display: flex;
  align-items: center;
}

.restaurant-logo {
  width: 60rpx;
  height: 60rpx;
  border-radius: 8rpx;
  margin-right: 16rpx;
}

.actions {
  display: flex;
  align-items: center;
}

.quantity-control {
  display: flex;
  align-items: center;
  margin-right: 20rpx;
}

.minus, .plus {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
}

.minus {
  background: #f5f5f5;
  color: #999;
}

.minus.active {
  background: #f5f5f5;
  color: #333;
}

.plus {
  background: #07c160;
  color: #fff;
}

.quantity {
  margin: 0 20rpx;
  font-size: 28rpx;
  color: #333;
  min-width: 40rpx;
  text-align: center;
}

.add-to-cart-btn {
  background: #07c160;
  color: #fff;
  font-size: 28rpx;
  padding: 0 40rpx;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 35rpx;
} 