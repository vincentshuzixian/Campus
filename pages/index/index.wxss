.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}

.page {
  padding: 20rpx;
  background: #f8f8f8;
}

.search-bar {
  position: relative;
  padding: 20rpx;
  background: #fff;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.search-bar input {
  padding: 10rpx 40rpx 10rpx 10rpx;
  font-size: 28rpx;
}

.search-bar icon {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #999;
}

.section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.restaurant-list {
  white-space: nowrap;
  padding: 10rpx 0;
}

.restaurant-item {
  display: inline-block;
  width: 300rpx;
  margin-right: 20rpx;
  background: #fff;
  border-radius: 8rpx;
  overflow: hidden;
}

.restaurant-item image {
  width: 300rpx;
  height: 200rpx;
}

.restaurant-info {
  padding: 10rpx;
}

.restaurant-name {
  font-size: 28rpx;
  color: #333;
}

.restaurant-rating {
  font-size: 24rpx;
  color: #ff9900;
}

.dishes-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.dish-item {
  background: #fff;
  border-radius: 8rpx;
  overflow: hidden;
}

.dish-item image {
  width: 100%;
  height: 345rpx;
}

.dish-name {
  padding: 10rpx;
  font-size: 28rpx;
  color: #333;
  text-align: center;
}

.category-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
  padding: 10rpx 0;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #fff;
  border-radius: 8rpx;
  padding: 20rpx;
}

.category-item image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-bottom: 10rpx;
}

.category-name {
  font-size: 24rpx;
  color: #333;
  text-align: center;
} 