.page {
  min-height: 100vh;
  background: #f8f8f8;
}

.status-tabs {
  display: flex;
  background: #fff;
  padding: 20rpx;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
}

.tab {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  padding: 16rpx 0;
  position: relative;
}

.tab.active {
  color: #07c160;
  font-weight: bold;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: #07c160;
  border-radius: 2rpx;
}

.order-list {
  margin-top: 100rpx;
  padding: 20rpx;
  height: calc(100vh - 100rpx);
  box-sizing: border-box;
}

.order-item {
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  padding: 30rpx;
}

.order-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.restaurant-logo {
  width: 60rpx;
  height: 60rpx;
  border-radius: 8rpx;
  margin-right: 16rpx;
}

.restaurant-info {
  flex: 1;
}

.restaurant-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  display: block;
}

.order-time {
  font-size: 24rpx;
  color: #999;
  display: block;
  margin-top: 4rpx;
}

.order-status {
  font-size: 26rpx;
  font-weight: bold;
}

.order-status.processing {
  color: #07c160;
}

.order-status.completed {
  color: #999;
}

.order-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.dishes-preview {
  display: flex;
  gap: 10rpx;
}

.dishes-preview image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
}

.order-info {
  text-align: right;
}

.dishes-count {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.order-price {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff4d4f;
}

.order-progress {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 0;
  border-top: 1rpx solid #eee;
  border-bottom: 1rpx solid #eee;
}

.progress-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  flex: 1;
}

.progress-dot {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background: #ddd;
  margin-bottom: 16rpx;
}

.progress-item.finished .progress-dot {
  background: #07c160;
}

.progress-item text {
  font-size: 24rpx;
  color: #999;
}

.progress-item.finished text {
  color: #07c160;
}

.progress-line {
  flex: 1;
  height: 2rpx;
  background: #ddd;
  position: relative;
  top: -26rpx;
}

.progress-line.finished {
  background: #07c160;
}

.order-actions {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
  margin-top: 30rpx;
}

.btn {
  font-size: 26rpx;
  padding: 16rpx 30rpx;
  border-radius: 30rpx;
  background: #f5f5f5;
  color: #666;
}

.btn.primary {
  background: #07c160;
  color: #fff;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 200rpx;
}

.empty-state image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-state text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.go-shopping-btn {
  background: #07c160;
  color: #fff;
  font-size: 28rpx;
  padding: 0 60rpx;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 35rpx;
}

.loading, .no-more {
  text-align: center;
  padding: 30rpx;
  color: #999;
  font-size: 24rpx;
} 