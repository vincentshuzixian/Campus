.page {
  background: #f8f8f8;
  min-height: 100vh;
}

.filter-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  display: flex;
  background: #fff;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
  z-index: 100;
}

.filter-item {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  color: #333;
  position: relative;
}

.filter-item.active {
  color: #07c160;
}

.arrow {
  width: 0;
  height: 0;
  border-left: 6rpx solid transparent;
  border-right: 6rpx solid transparent;
  margin-left: 8rpx;
}

.arrow.down {
  border-top: 6rpx solid #999;
}

.arrow.up {
  border-bottom: 6rpx solid #07c160;
}

.filter-options {
  position: fixed;
  top: 88rpx;
  left: 0;
  right: 0;
  background: #fff;
  z-index: 99;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  max-height: 400rpx;
  overflow-y: auto;
}

.option {
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  color: #333;
}

.option.active {
  color: #07c160;
  background: #f0fff4;
}

.restaurant-list {
  margin-top: 88rpx;
  padding: 20rpx;
  height: calc(100vh - 88rpx);
  box-sizing: border-box;
}

.restaurant-item {
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}

.restaurant-image {
  width: 100%;
  height: 300rpx;
}

.restaurant-info {
  padding: 20rpx;
}

.restaurant-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.restaurant-rating {
  margin-bottom: 10rpx;
}

.rating-score {
  color: #ff9900;
  font-size: 28rpx;
  font-weight: bold;
}

.rating-count {
  color: #999;
  font-size: 24rpx;
  margin-left: 10rpx;
}

.restaurant-tags {
  margin-bottom: 10rpx;
}

.tag {
  display: inline-block;
  padding: 4rpx 12rpx;
  background: #f5f5f5;
  color: #666;
  font-size: 24rpx;
  border-radius: 4rpx;
  margin-right: 10rpx;
}

.restaurant-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

.loading, .no-more {
  text-align: center;
  padding: 20rpx;
  color: #999;
  font-size: 24rpx;
} 